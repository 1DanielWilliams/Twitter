<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TweetDetailActivity">

    <ImageView
        android:id="@+id/ivProfileDetail"
        android:layout_width="113dp"
        android:layout_height="114dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvProfileNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ivProfileDetail"
        android:textSize="25sp"
        tools:text="RandomUser1234" />

    <TextView
        android:id="@+id/tvOverviewDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfileDetail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:autoLink="all"
        android:textSize="23sp"
        tools:text="TextView TextViewTextView TextView TextView TextView TextView TextView" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivImageDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvOverviewDetail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:riv_corner_radius="25dp"
        app:riv_mutate_background="true"
        app:riv_oval="false"
        app:riv_tile_mode="repeat"
        android:visibility="visible"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTimeDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImageDetail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        tools:text="2:58 PM" />

    <TextView
        android:id="@+id/tvDateDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImageDetail"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/tvTimeDetail"
        tools:text="6/8/22" />

    <TextView
        android:id="@+id/tvSourceDetail"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImageDetail"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/tvDateDetail"
        tools:text="Twitter For Iphone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvDateDetail"
        android:layout_marginTop="3dp"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvNumRetweetsDetail"
        android:layout_marginTop="9dp"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/imageButton2"
        android:layout_marginTop="9dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tvNumRetweetsDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTimeDetail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="12dp"
        tools:text="35 Retweets" />

    <TextView
        android:id="@+id/tvNumLikesDetail"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTimeDetail"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="75dp"
        android:layout_toEndOf="@+id/tvNumRetweetsDetail"
        tools:text="10 Likes" />

    <ImageButton
        android:id="@+id/btnLikeDetail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvNumLikesDetail"
        android:layout_marginStart="70dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/btnRetweetDetail"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_vector_heart_stroke"
        tools:srcCompat="@drawable/ic_vector_heart_stroke" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvNumRetweetsDetail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="22dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/sym_action_chat"
        tools:srcCompat="@android:drawable/sym_action_chat" />

    <ImageButton
        android:id="@+id/btnRetweetDetail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvNumRetweetsDetail"
        android:layout_marginStart="69dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/imageButton2"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_vector_retweet_stroke"
        tools:srcCompat="@drawable/ic_vector_retweet_stroke" />

    <TextView
        android:id="@+id/tvUsernameDetail"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProfileNameDetail"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="90dp"
        android:layout_toEndOf="@+id/ivProfileDetail"
        android:text="TextView"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/ivVerifiedDetail"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/tvProfileNameDetail"
        android:visibility="visible"
        app:srcCompat="@drawable/verified"
        tools:srcCompat="@drawable/verified" />
</RelativeLayout>